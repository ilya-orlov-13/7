@{
    ViewData["Title"] = "Вход";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Шиномонтаж</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --button_radius: 0.75em;
            --button_outline_color: #000000;
            --button_color: #e8e8e8;
        }

        body {
            background: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            padding: 20px;
        }

        .main-3d-wrapper {
            position: relative;
            background: var(--button_outline_color);
            border-radius: var(--button_radius);
            display: block;
            margin-top: 0rem;
            cursor: default;
            transition: max-width 0.3s ease;
            width: 100%;
            max-width: 450px;
        }

        .main-3d-inner {
            display: block;
            box-sizing: border-box;
            border: 2px solid var(--button_outline_color);
            border-radius: var(--button_radius);
            background: white;
            padding: 30px;
            transform: translateY(-0.15em);
            transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .modern-btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            width: 100%;
            justify-content: center;
        }

        .modern-btn-primary {
            background-color: #000000;
            color: white;
        }

        .modern-btn-primary:hover {
            background-color: #333333;
            transform: translateY(-1px);
        }

        .details-row {
            display: flex;
            flex-direction: column;
            padding: 12px 0;
            border-bottom: 1px solid #f1f5f9;
        }

        .details-row:last-child {
            border-bottom: none;
        }

        .details-label {
            font-weight: 600;
            color: #64748b;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 8px;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.2s ease;
            background: #ffffff;
            font-weight: 500;
            color: #1e293b;
        }

        .form-input:focus {
            outline: none;
            border-color: #000000;
            box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
        }

        .error-alert {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            padding: 12px 16px;
            border-radius: 8px;
            font-size: 14px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .login-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #212529;
            margin: 0 0 8px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .login-description {
            color: #64748b;
            font-size: 14px;
            margin-bottom: 24px;
        }

        .credentials-info {
            background: #f0f9ff;
            border: 1px solid #bae6fd;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
        }

        .credentials-info h6 {
            color: #0369a1;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .credentials-info p {
            color: #0284c7;
            font-size: 13px;
            margin: 4px 0;
            font-family: monospace;
        }

        @@media (max-width: 576px) {
            .main-3d-inner {
                padding: 20px;
            }
            
            body {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="main-3d-wrapper">
        <div class="main-3d-inner">
            
            <!-- Заголовок -->
            <div class="d-flex justify-content-center align-items-center mb-4">
                <h3 class="login-title">
                    <i class="bi bi-shield-lock"></i> Вход
                </h3>
            </div>
            
            <p class="login-description text-center">
                Введите ваши учетные данные для доступа к панели управления
            </p>

            <form method="post" asp-action="Login">

                @if (ViewBag.Error != null)
                {
                    <div class="error-alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        @ViewBag.Error
                    </div>
                }

                <!-- Поля формы -->
                <div class="mb-4">
                    <div class="details-row">
                        <div class="details-label">
                            <i class="bi bi-person"></i> Логин:
                        </div>
                        <input type="text" id="login" name="login" class="form-input" placeholder="Введите логин" required />
                    </div>
                    
                    <div class="details-row">
                        <div class="details-label">
                            <i class="bi bi-lock"></i> Пароль:
                        </div>
                        <input type="password" id="password" name="password" class="form-input" placeholder="Введите пароль" required />
                    </div>
                </div>

                <!-- Кнопка входа -->
                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="modern-btn modern-btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Войти
                    </button>
                </div>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>