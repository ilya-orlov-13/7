@model IEnumerable<TyreServiceApp.Models.CompletedWork>

@{
    ViewData["Title"] = "Выполненные работы";
}

<style>
    :root {
        --button_radius: 0.75em;
        --button_outline_color: #000000;
        --button_color: #e8e8e8;
    }

    .main-3d-wrapper {
        position: relative;
        background: var(--button_outline_color);
        border-radius: var(--button_radius);
        display: block;
        margin-top: 0rem;
        cursor: default;
    }

    .main-3d-inner {
        display: block;
        box-sizing: border-box;
        border: 2px solid var(--button_outline_color);
        border-radius: var(--button_radius);
        background: white;
        padding: 20px;
        transform: translateY(-0.15em);
        transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .uiverse-table {
        width: 100%;
        background: white;
        border: 1px solid rgb(203, 203, 203);
        border-radius: 8px;
        overflow: hidden;
        display: block;
        margin-top: 15px;
    }

    .uiverse-table__header {
        display: flex;
        background: rgb(60, 60, 60);
        color: white;
        border-bottom: 1px solid rgb(203, 203, 203);
    }

    .uiverse-table__row {
        display: flex;
        border-bottom: 1px solid rgb(203, 203, 203);
        background: white;
    }

    .uiverse-table__row:nth-child(even) {
        background: rgb(234, 235, 234);
    }

    .uiverse-table__row:last-child {
        border-bottom: none;
    }

    .uiverse-table__cell {
        padding: 12px;
        display: flex;
        align-items: center;
        min-height: 70px;
    }

    /* Настройка ширины колонок */
    .col-order { width: 15%; border-right: 1px solid rgb(203, 203, 203); }
    .col-service { width: 15%; border-right: 1px solid rgb(203, 203, 203); }
    .col-master { width: 15%; border-right: 1px solid rgb(203, 203, 203); }
    .col-wheels { width: 12%; border-right: 1px solid rgb(203, 203, 203); }
    .col-time { width: 13%; border-right: 1px solid rgb(203, 203, 203); }
    .col-total { width: 15%; border-right: 1px solid rgb(203, 203, 203); }
    .col-actions { width: 15%; justify-content: center; }

    .uiverse-table__header .uiverse-table__cell {
        font-weight: bold;
        font-size: 0.9rem;
        justify-content: center;
    }

    /* Стили для значков и текста */
    .work-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-weight: 500;
    }

    .service-badge {
        background-color: #ccc;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .total-amount {
        font-weight: bold;
        color: #28a745;
        font-size: 1rem;
    }

    @@media (min-width: 993px) {
        .uiverse-table__header { 
            display: flex !important; 
        }
        .uiverse-table__row { 
            display: flex !important; 
        }
        .col-order { width: 15%; }
        .col-service { width: 15%; }
        .col-master { width: 15%; }
        .col-wheels { width: 12%; }
        .col-time { width: 13%; }
        .col-total { width: 15%; }
        .col-actions { width: 15%; }
    }

    @@media (max-width: 992px) {
        .uiverse-table__header { 
            display: none !important; 
        }
        .uiverse-table__row { 
            flex-direction: column !important; 
            padding: 10px 0; 
            border-bottom: 1px solid rgb(203, 203, 203) !important; 
        }
        .col-order, .col-service, .col-master, .col-wheels, .col-time, .col-total, .col-actions { 
            width: 100% !important; 
            border-right: none !important; 
            border-bottom: 1px solid rgba(203, 203, 203, 0.5); 
            justify-content: flex-start !important; 
        }
        .uiverse-table__cell { 
            min-height: auto !important; 
            padding: 8px 15px !important; 
        }
        .col-actions { 
            border-bottom: none; 
        }
        
        .col-order::before { content: "Заказ: "; font-weight: bold; margin-right: 10px; }
        .col-service::before { content: "Услуга: "; font-weight: bold; margin-right: 10px; }
        .col-master::before { content: "Мастер: "; font-weight: bold; margin-right: 10px; }
        .col-wheels::before { content: "Колеса: "; font-weight: bold; margin-right: 10px; }
        .col-time::before { content: "Время: "; font-weight: bold; margin-right: 10px; }
        .col-total::before { content: "Сумма: "; font-weight: bold; margin-right: 10px; }
        .col-actions::before { content: "Действия: "; font-weight: bold; margin-right: 10px; }
    }
</style>

<div class="container-fluid pt-2 pb-4">
    <div class="main-3d-wrapper">
        <div class="main-3d-inner">
            
            <!-- Заголовок и кнопка -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold m-0">
                    <i class="bi bi-check-circle-fill me-2"></i> Выполненные работы
                </h3>
                <a asp-action="Create" class="btn btn-dark">
                    <i class="bi bi-plus-circle me-1"></i> Добавить работу
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="uiverse-table">
                    <!-- Заголовок таблицы -->
                    <div class="uiverse-table__header">
                        <div class="uiverse-table__cell col-order">Заказ</div>
                        <div class="uiverse-table__cell col-service">Услуга</div>
                        <div class="uiverse-table__cell col-master">Мастер</div>
                        <div class="uiverse-table__cell col-wheels">Колеса</div>
                        <div class="uiverse-table__cell col-time">Время</div>
                        <div class="uiverse-table__cell col-total">Сумма</div>
                        <div class="uiverse-table__cell col-actions">Действия</div>
                    </div>
                    
                    <!-- Строки данных -->
                    @foreach (var item in Model)
                    {
                        <div class="uiverse-table__row">
                            <!-- Номер заказа -->
                            <div class="uiverse-table__cell col-order">
                                <div class="work-badge">
                                    <strong>@Html.DisplayFor(modelItem => item.OrderNumber)</strong>
                                </div>
                            </div>

                            <!-- Код услуги -->
                            <div class="uiverse-table__cell col-service">
                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.ServiceCode)</span>
                            </div>

                            <!-- Мастер -->
                            <div class="uiverse-table__cell col-master">
                                <div class="work-badge">
                                    <i class="bi bi-person-badge text-secondary"></i>
                                    @Html.DisplayFor(modelItem => item.MasterId)
                                </div>
                            </div>

                            <!-- Количество колес -->
                            <div class="uiverse-table__cell col-wheels">
                                <div class="work-badge">
                                    <i class="bi bi-circle text-warning"></i>
                                    @Html.DisplayFor(modelItem => item.WheelCount)
                                </div>
                            </div>

                            <!-- Время выполнения -->
                            <div class="uiverse-table__cell col-time">
                                <div class="work-badge">
                                    <i class="bi bi-clock text-info"></i>
                                    @Html.DisplayFor(modelItem => item.CompletionTimeMin) мин
                                </div>
                            </div>

                            <!-- Общая стоимость -->
                            <div class="uiverse-table__cell col-total">
                                <div class="work-badge">
                                    <span class="total-amount text-success">@Html.DisplayFor(modelItem => item.WorkTotal) ₽</span>
                                </div>
                            </div>

                            <!-- Действия -->
                            <div class="uiverse-table__cell col-actions">
                                <div class="d-flex justify-content-center gap-2 w-100">
                                    <a asp-action="Details" asp-route-id="@item.WorkId" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.WorkId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.WorkId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 border rounded bg-light">
                    <i class="bi bi-check-circle text-muted" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">Выполненные работы не найдены</h4>
                    <p class="text-muted">Добавьте первую выполненную работу, чтобы начать учет.</p>
                </div>
            }
        </div>
    </div>
</div>