@model TyreServiceApp.Models.Order

@{
    ViewData["Title"] = "Детали заказа";
}

<style>
    :root {
        --button_radius: 0.75em;
        --button_outline_color: #000000;
        --button_color: #e8e8e8;
    }

    .main-3d-wrapper {
        position: relative;
        background: var(--button_outline_color);
        border-radius: var(--button_radius);
        display: block;
        margin-top: 1rem;
        cursor: default;
    }

    @@media (min-width: 992px) {
        .main-3d-wrapper {
            max-width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }
    }

    .main-3d-inner {
        display: block;
        box-sizing: border-box;
        border: 2px solid var(--button_outline_color);
        border-radius: var(--button_radius);
        background: white;
        padding: 30px;
        transform: translateY(-0.15em);
        transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
/* 
    .main-3d-wrapper:hover .main-3d-inner {
        transform: translateY(-0.35em);
    } */

    .info-section-title {
        font-weight: bold;
        color: #212529;
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    .info-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #6c757d;
        margin-bottom: 4px;
        font-weight: 600;
    }

    .info-value {
        font-weight: 500;
        color: #212529;
        margin-bottom: 15px;
    }

    .uiverse-table {
        width: 100%;
        background: white;
        border: 1px solid rgb(203, 203, 203);
        border-radius: 8px;
        overflow: hidden;
        margin-top: 10px;
    }

    .uiverse-table__header {
        display: flex;
        background: rgb(60, 60, 60);
        color: white;
        font-weight: bold;
        font-size: 0.85rem;
    }

    .uiverse-table__row {
        display: flex;
        border-bottom: 1px solid rgb(203, 203, 203);
    }

    .uiverse-table__row:nth-child(even) {
        background: rgb(248, 249, 250);
    }

    .uiverse-table__cell {
        padding: 12px;
        display: flex;
        align-items: center;
    }

    .col-service { width: 40%; }
    .col-wheels { width: 15%; justify-content: center; }
    .col-total { width: 25%; justify-content: center; font-weight: bold; }
    .col-time { width: 20%; justify-content: center; }

    .uiverse-table__footer {
        display: flex;
        background: #f8f9fa;
        font-weight: bold;
        border-top: 2px solid #000;
    }

    .avatar-circle {
        width: 45px;
        height: 45px;
        background: #212529;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 12px;
    }
</style>

<div class="container-fluid pt-2 pb-4">
    <div class="main-3d-wrapper">
        <div class="main-3d-inner">
            
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                    <h3 class="fw-bold m-0">Заказ #@Model.OrderNumber</h3>
                    <div class="text-muted mt-1">
                        <i class="bi bi-calendar-check me-1"></i> от @Model.OrderDate.ToString("dd MMMM yyyy, HH:mm")
                    </div>
                </div>
                <div>
                    @if (Model.PaymentDate.HasValue)
                    {
                        <span class="badge bg-success px-3 py-2">
                            <i class="bi bi-check-circle me-1"></i> Оплачено
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark px-3 py-2">
                            <i class="bi bi-clock me-1"></i> Ожидает оплаты
                        </span>
                    }
                </div>
            </div>

            <div class="row">
                <!-- Основная информация -->
                <div class="col-md-6">
                    <h6 class="info-section-title">
                        <i class="bi bi-car-front me-2"></i> Данные автомобиля
                    </h6>
                    <div class="d-flex align-items-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.Car?.PhotoPath))
                        {
                            <img src="@Model.Car.PhotoPath" class="rounded border" style="width: 100px; height: 70px; object-fit: cover; margin-right: 15px;" />
                        }
                        <div>
                            <div class="info-label">Автомобиль</div>
                            <div class="info-value">@(Model.Car?.Brand ?? "—") @(Model.Car?.Model ?? "")</div>
                            <div class="info-label">Госномер</div>
                            <div class="info-value"><span class="badge bg-dark">@(Model.Car?.LicensePlate ?? "—")</span></div>
                        </div>
                    </div>

                    <div class="info-label">Владелец</div>
                    <div class="info-value">
                        <i class="bi bi-person me-1"></i> @(Model.Car?.Client?.FullName ?? "Не указан")
                        <br />
                        <small class="text-muted"><i class="bi bi-telephone me-1"></i> @(Model.Car?.Client?.Phone ?? "—")</small>
                    </div>
                </div>

                <!-- Мастер -->
                <div class="col-md-6">
                    <h6 class="info-section-title">
                        <i class="bi bi-person-badge me-2"></i> Исполнитель
                    </h6>
                    @if (Model.Master != null)
                    {
                        <div class="d-flex align-items-center">
                            <div class="avatar-circle">@Model.Master.FullName?[0]</div>
                            <div>
                                <div class="fw-bold">@Model.Master.FullName</div>
                                <div class="text-muted small">@Model.Master.Position • @Model.Master.Rank разряд</div>
                                <div class="text-muted small">Ставка: @Model.Master.HourlyRate.ToString("N0") ₽/ч</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light border d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle me-2 text-warning"></i>
                            Мастер еще не назначен
                        </div>
                    }
                </div>
            </div>

            <!-- Список работ -->
            <div class="mt-4">
                <h6 class="info-section-title">
                    <i class="bi bi-tools me-2"></i> Заказ
                </h6>

                @if (Model.CompletedWorks != null && Model.CompletedWorks.Any())
                {
                    <div class="uiverse-table">
                        <div class="uiverse-table__header">
                            <div class="uiverse-table__cell col-service">Услуга</div>
                            <div class="uiverse-table__cell col-wheels">Колеса</div>
                            <div class="uiverse-table__cell col-total">Стоимость</div>
                            <div class="uiverse-table__cell col-time">Время</div>
                        </div>

                        @foreach (var work in Model.CompletedWorks)
                        {
                            <div class="uiverse-table__row">
                                <div class="uiverse-table__cell col-service">
                                    <div>
                                        <div class="fw-bold">@(work.Service?.ServiceName ?? "Услуга")</div>
                                        <small class="text-muted">Код: @work.ServiceCode</small>
                                    </div>
                                </div>
                                <div class="uiverse-table__cell col-wheels">@work.WheelCount шт.</div>
                                <div class="uiverse-table__cell col-total">@work.WorkTotal.ToString("N2") ₽</div>
                                <div class="uiverse-table__cell col-time">@work.CompletionTimeMin мин.</div>
                            </div>
                        }

                        <div class="uiverse-table__footer">
                            <div class="uiverse-table__cell col-service">ИТОГО:</div>
                            <div class="uiverse-table__cell col-wheels"></div>
                            <div class="uiverse-table__cell col-total text-primary">@Model.CompletedWorks.Sum(w => w.WorkTotal).ToString("N2") ₽</div>
                            <div class="uiverse-table__cell col-time">@Model.CompletedWorks.Sum(w => w.CompletionTimeMin) мин.</div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 border rounded bg-light">
                        <i class="bi bi-journal-x text-muted fs-2"></i>
                        <p class="text-muted mt-2">Работы по данному заказу еще не зафиксированы.</p>
                    </div>
                }
            </div>

            <!-- Кнопки действий -->
            <div class="d-flex gap-2 mt-5">
                <a asp-action="Edit" asp-route-id="@Model.OrderNumber" class="btn btn-dark px-4">
                    <i class="bi bi-pencil-square me-2"></i> Редактировать
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left me-2"></i> К списку заказов
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}