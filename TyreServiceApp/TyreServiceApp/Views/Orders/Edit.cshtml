@model TyreServiceApp.Models.Order

@{
    ViewData["Title"] = "Редактировать заказ";
}

<style>
    :root {
        --button_radius: 0.75em;
        --button_outline_color: #000000;
        --button_color: #e8e8e8;
    }

    .main-3d-wrapper {
        position: relative;
        background: var(--button_outline_color);
        border-radius: var(--button_radius);
        display: block;
        margin-top: 0rem;
        cursor: default;
        transition: max-width 0.3s ease;
    }

    @@media (min-width: 992px) {
        .main-3d-wrapper {
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }
    }

    .main-3d-inner {
        display: block;
        box-sizing: border-box;
        border: 2px solid var(--button_outline_color);
        border-radius: var(--button_radius);
        background: white;
        padding: 30px;
        transform: translateY(-0.15em);
        transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .car-selector-container {
        margin-bottom: 20px;
        max-width: 320px;
    }

    .car-collapsible {
        background-color: #fafafa;
        color: #333;
        cursor: pointer;
        padding: 12px 16px;
        width: 100%;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        text-align: left;
        font-size: 14px;
        outline: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s ease;
        min-height: 48px;
    }

    .car-collapsible:hover {
        background-color: #f0f0f0;
        border-color: #000000;
    }

    .car-collapsible.active {
        background-color: #f5f5f5;
        border-color: #000000;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    .car-collapsible-text {
        flex: 1;
        text-align: left;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .car-collapsible-icon {
        transition: transform 0.3s ease;
        font-size: 16px;
        margin-left: 8px;
        flex-shrink: 0;
    }

    .car-collapsible.active .car-collapsible-icon {
        transform: rotate(180deg);
    }

    .car-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.35s ease-in-out;
        border: none;
        border-radius: 0 0 8px 8px;
        background: white;
        box-shadow: none;
    }

    .car-content.active {
        border: 2px solid #000000;
        border-top: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .car-search-container {
        padding: 12px;
        border-bottom: 1px solid #eee;
        background-color: #f8f9fa;
    }

    .car-search-input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 13px;
        outline: none;
        transition: border-color 0.2s ease;
    }

    .car-search-input:focus {
        border-color: #000000;
        box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.15);
    }

    .car-options-list {
        max-height: 240px;
        overflow-y: auto;
        background: white;
    }

    .car-option {
        padding: 10px 12px;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.2s ease;
    }

    .car-option:hover {
        background-color: #f8f9fa;
    }

    .car-option.selected {
        background-color: #f0f0f0;
        border-left: 3px solid #000000;
    }

    .car-option:last-child {
        border-bottom: none;
    }

    .car-option-photo {
        width: 40px;
        height: 28px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #ddd;
        flex-shrink: 0;
    }

    .car-option-placeholder {
        width: 40px;
        height: 28px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        flex-shrink: 0;
        font-size: 12px;
    }

    .car-option-info {
        flex: 1;
        min-width: 0;
    }

    .car-option-title {
        font-weight: 600;
        color: #212529;
        margin-bottom: 2px;
        font-size: 13px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .car-option-details {
        font-size: 11px;
        color: #6c757d;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .selected-car-display {
        color: #000000;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .selected-car-photo {
        width: 24px;
        height: 16px;
        object-fit: cover;
        border-radius: 3px;
        border: 1px solid #000000;
    }

    .car-options-list::-webkit-scrollbar {
        width: 6px;
    }

    .car-options-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .car-options-list::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

    .car-options-list::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
    }

    .modern-form-group {
        margin-bottom: 20px;
    }

    .modern-form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
        font-size: 14px;
    }

    .modern-form-input {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
        background-color: #fff;
    }

    .modern-form-input:focus {
        outline: none;
        border-color: #000000;
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
    }

    .modern-form-select {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        font-size: 14px;
        background-color: #fff;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .modern-form-select:focus {
        outline: none;
        border-color: #000000;
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
    }

    .modern-btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .modern-btn-primary {
        background-color: #000000;
        color: white;
    }

    .modern-btn-primary:hover {
        background-color: #333333;
        transform: translateY(-1px);
    }

    .modern-btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .modern-btn-secondary:hover {
        background-color: #545b62;
        transform: translateY(-1px);
        color: white;
        text-decoration: none;
    }

    .form-text-helper {
        font-size: 12px;
        color: #6c757d;
        margin-top: 4px;
    }

    .validation-error {
        color: #dc3545;
        font-size: 12px;
        margin-top: 4px;
    }

    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    #selectedCarId {
        display: none;
    }

    /* Стили для календаря */
    .calendar-container {
        position: relative;
        max-width: 280px;
    }

    .calendar-input {
        cursor: pointer;
        background-color: #fff;
    }

    .calendar-input:focus {
        cursor: pointer;
    }

    .calendar-popup {
        position: absolute;
        top: 100%;
        left: 0;
        width: 280px;
        background: white;
        border: 2px solid #000000;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        z-index: 1000;
        padding: 16px;
        margin-top: 4px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all 0.3s ease;
    }

    .calendar-popup.active {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .calendar-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 16px;
    }

    .calendar-nav-btn {
        background: none;
        border: none;
        padding: 6px;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
    }

    .calendar-nav-btn:hover {
        background-color: #f1f5f9;
    }

    .calendar-month-year {
        font-size: 14px;
        font-weight: 600;
        color: #1e293b;
        margin: 0;
    }

    .calendar-weekdays {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 2px;
        margin-bottom: 6px;
    }

    .calendar-weekday {
        text-align: center;
        font-size: 10px;
        font-weight: 500;
        color: #64748b;
        padding: 6px 0;
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 2px;
    }

    .calendar-day {
        height: 28px;
        width: 28px;
        border: none;
        background: none;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        color: #374151;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .calendar-day:hover:not(.empty):not(.today) {
        background-color: #e2e8f0;
    }

    .calendar-day.today {
        background-color: #000000;
        color: white;
    }

    .calendar-day.selected {
        background-color: #0f172a !important;
        color: white;
    }

    .calendar-day.empty {
        cursor: default;
    }

    .calendar-day.other-month {
        color: #cbd5e1;
    }

    /* Стили для выбора времени в календаре */
    .calendar-time-section {
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid #e2e8f0;
    }

    .calendar-time-label {
        font-size: 12px;
        font-weight: 500;
        color: #64748b;
        margin-bottom: 8px;
        text-align: center;
    }

    .calendar-time-inputs {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
    }

    .calendar-time-input {
        width: 40px;
        height: 28px;
        border: 1px solid #d1d5db;
        border-radius: 4px;
        text-align: center;
        font-size: 12px;
        font-weight: 500;
        background: white;
        outline: none;
        transition: border-color 0.2s ease;
    }

    .calendar-time-input:focus {
        border-color: #000000;
        box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
    }

    .calendar-time-separator {
        font-size: 14px;
        font-weight: 600;
        color: #374151;
    }
</style>

