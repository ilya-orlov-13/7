<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TyreServiceApp</title>
    
    <link rel="icon" href="~/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TyreServiceApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-index.css" asp-append-version="true" />
    <style>
        .dock-outer {
            display: flex;
            justify-content: flex-end; 
            width: 100%;
        }

        .nav-container {
            position: relative;
            display: flex;
            align-items: flex-start; 
            width: fit-content;
            background-color: transparent !important;
            border: none !important;
            border-radius: 1rem;
            padding: 10px;
            height: 70px;
            overflow: visible;
            gap: 0; 
        }

        .nav-button {
            position: relative;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background-color: #060010;
            border: 1px solid #222;
            cursor: pointer;
            outline: none;
            width: 50px;
            height: 50px;
            margin: 0 10px;
            transition: all 0.3s ease;
            text-decoration: none !important;
            color: #fff !important;
            z-index: 1;
        }

        .nav-button:hover, 
        .nav-item.active .nav-button {
            background-color: #ffffff !important;
            border-color: #ffffff !important;
            color: #000000 !important;
        }

        .nav-button:hover i,
        .nav-item.active .nav-button i {
            color: #000000 !important;
        }

        .nav-button i {
            font-size: 20px;
            transition: color 0.3s ease;
        }

        .dock-label {
            position: absolute;
            top: 100%; 
            left: 50%;
            margin-top: 15px;
            width: fit-content;
            white-space: nowrap;
            border-radius: 0.375rem;
            border: 1px solid #222;
            background-color: #060010;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            color: #fff;
            transform: translateX(-50%);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s ease;
            z-index: 1000;
        }

        .nav-button:hover .dock-label {
            opacity: 1;
        }

        .navbar-dark.bg-dark {
            background-color: #111111 !important;
            border-bottom: 1px solid #333;
            min-height: 90px;
        }

        .full-nav-container {
            display: flex;
            flex-grow: 1;
            justify-content: flex-end; 
            align-items: center;
        }

        .brand-text {
            color: white !important;
            font-size: 1.5rem;
            font-weight: 600;
            margin-left: 8px;
            letter-spacing: 0.5px;
        }

        /* Мобильная версия */
        @@media (max-width: 991px) {
            .nav-container {
                flex-direction: column;
                width: 100%;
                height: auto;
                align-items: stretch;
                gap: 10px;
            }
            .nav-button {
                width: 100% !important;
                margin: 0 !important;
                height: 50px !important;
                justify-content: flex-start;
                padding-left: 15px;
            }
            .dock-label {
                position: static;
                opacity: 1;
                transform: none;
                margin: 0 0 0 10px;
                border: none;
                background: none;
            }
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <div class="brand-container d-flex align-items-center" style="margin-right: 30px;">
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Logo" style="height: 40px; width: auto;" />
                        <span class="brand-text fw-bold">TyreService</span>
                    </a>
                </div>
              
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="full-nav-container">
                        <div class="dock-outer">
                            <div class="nav-container" id="navContainer">
                                
                                @{
                                    var menuItems = new[] {
                                        new { c = "Home", i = "house-door", t = "Главная" },
                                        new { c = "Clients", i = "people", t = "Клиенты" },
                                        new { c = "Cars", i = "car-front", t = "Автомобили" },
                                        new { c = "Orders", i = "receipt", t = "Заказы" },
                                        new { c = "Services", i = "gear", t = "Услуги" },
                                        new { c = "Masters", i = "person-badge", t = "Мастера" },
                                        new { c = "Tires", i = "circle", t = "Шины" },
                                        new { c = "CompletedWorks", i = "check-circle", t = "Работы" }
                                    };
                                }

                                @foreach (var item in menuItems)
                                {
                                    <div class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == item.c ? "active" : "")">
                                        <a asp-controller="@item.c" asp-action="Index" class="nav-button">
                                            <i class="bi bi-@item.i"></i>
                                            <div class="dock-label">@item.t</div>
                                        </a>
                                    </div>
                                }

                                <!-- Кнопка выхода -->
                                <div class="nav-item">
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="nav-button">
                                            <i class="bi bi-box-arrow-right"></i>
                                            <div class="dock-label">Выйти</div>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 pt-2 pb-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top mt-auto py-3">
        <div class="container-fluid text-center text-muted">
            <small>&copy; 2026 - TyreServiceApp - Система управления шиномонтажем</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>